@model List<HotelProject.WebUI.Models.Role.RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Rol Atama Sayfası</h1>

<form method="post">
    <input type="hidden" name="UserId" value="@ViewData["UserId"]" />
    @for (int i = 0; i < Model.Count; i++)
    {
        var isChecked = Model[i].RoleName == (string)ViewData["UserRole"] ? "checked" : "";
        <div class="form-check">
            <input class="form-check-input" type="radio"
                   name="SelectedRoleId"
                   value="@Model[i].RoleID"
            @isChecked />
            <label class="form-check-label">@Model[i].RoleName</label>
        </div>
    }
    <button class="btn btn-primary mt-2">Rolü Ata</button>
</form>

